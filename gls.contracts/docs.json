{
  "name": "gls.contracts",
  "generators": [
    {
      "name": "collate_markdown",
      "options": {
        "docs_dir": "docs"
      }
    },
    {
      "name": "mdjavadoc",
      "options": {
        "source_dirs": [
          "contracts/gls.token/include/gls.token/",
          "contracts/gls.wrap/include/gls.wrap/",
          "contracts/actc.bios/include/actc.bios/",
          "contracts/gls.system/include/gls.system/",
          "contracts/actc.msig/include/actc.msig/"
        ],
        "output_dir": "action-reference"
      }
    }
  ],
  "skip_default_filters": true,
  "filters": [
    {
      "name": "sanitize",
      "options": {
        "exclude": ["action-reference"]
      }
    },
    {
      "name": "capitalize",
      "options": {
        "mode": "all",
        "exclude": ["action-reference"]
      }
    }
  ]
}
