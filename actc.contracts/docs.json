{
  "name": "actc.contracts",
  "generators": [
    {
      "name": "collate_markdown",
      "options": {
        "docs_dir": "docs"
      }
    },
    {
      "name": "mdjavadoc",
      "options": {
        "source_dirs": [
          "contracts/actc.token/include/actc.token/",
          "contracts/actc.wrap/include/actc.wrap/",
          "contracts/actc.bios/include/actc.bios/",
          "contracts/actc.system/include/actc.system/",
          "contracts/actc.msig/include/actc.msig/"
        ],
        "output_dir": "action-reference"
      }
    }
  ],
  "skip_default_filters": true,
  "filters": [
    {
      "name": "sanitize",
      "options": {
        "exclude": ["action-reference"]
      }
    },
    {
      "name": "capitalize",
      "options": {
        "mode": "all",
        "exclude": ["action-reference"]
      }
    }
  ]
}
